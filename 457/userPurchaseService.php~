<?php
include("config.php");
						$customer_id = $_POST['customer_id'];
						//query to get all books
						if (isset($_POST['customer_id'])){
							$query = 'SELECT b.ISBN,b.title,b.price,p.quantity FROM purchase p LEFT JOIN books b ON p.ISBN = b.ISBN WHERE c.customer_id='.$customer_id;
						
						
						$result = mysql_query($query);
						$finalResult = array();
						while ($row = mysql_fetch_array($result, MYSQL_ASSOC)) {
							array_push($finalResult,array('ISBN'=>$row['ISBN'], 'title'=>$row['title'],'price'=>$row['price'],'quantity'=>$row['quantity']));

						}
}
echo json_encode(array("result"=>$finalResult));
?>
